<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>blog</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodeFilter</filter-name>
    <filter-class>com.tjp.filter.EncodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodeFilter</filter-name>
    <servlet-name>UserCheckServlet</servlet-name>
    <servlet-name>UserServlet</servlet-name>
    <servlet-name>home</servlet-name>
    <servlet-name>person</servlet-name>
    <servlet-name>login</servlet-name>
  </filter-mapping>
  <filter>
    <display-name>AutoLoginFilter</display-name>
    <filter-name>AutoLoginFilter</filter-name>
    <filter-class>com.tjp.filter.AutoLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AutoLoginFilter</filter-name>
    <servlet-name>login</servlet-name>
    <servlet-name>person</servlet-name>
  </filter-mapping>
  <filter>
    <display-name>UserFilter</display-name>
    <filter-name>UserFilter</filter-name>
    <filter-class>com.tjp.filter.UserFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <servlet-name>person</servlet-name>
    <servlet-name>home</servlet-name>
  </filter-mapping>
  <servlet>
    <servlet-name>UserCheckServlet</servlet-name>
    <servlet-class>com.tjp.servlet.UserCheckServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserCheckServlet</servlet-name>
    <url-pattern>/UserCheckServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.tjp.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/UserServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>VertificationCodeServlet</servlet-name>
    <servlet-class>com.tjp.servlet.VertificationCodeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VertificationCodeServlet</servlet-name>
    <url-pattern>/VertificationCodeServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login.html</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>home</servlet-name>
    <jsp-file>/home.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/home.html</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>person</servlet-name>
    <jsp-file>/person.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>person</servlet-name>
    <url-pattern>/person.html</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadImgServlet</servlet-name>
    <servlet-class>com.tjp.servlet.UploadImgServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadImgServlet</servlet-name>
    <url-pattern>/UploadImgServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetImgServlet</servlet-name>
    <servlet-class>com.tjp.servlet.GetImgServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetImgServlet</servlet-name>
    <url-pattern>/getImage</url-pattern>
  </servlet-mapping>
</web-app>